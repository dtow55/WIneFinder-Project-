<!--  wines#form -->

<%= form_for @wine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :color %>
  <%= f.text_field :color %><br>
  <%= f.label "Varietal" %>
  <%= f.text_field :grape %><br>
  <%= f.label :price %>
  <%= f.number_field :price, step: :any %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description, size: "30x5" %><br>
  <% if !@store %>
    <%= f.fields_for :stores_wines do |s| %>
      <%= s.hidden_field :store_id %>
      <%= s.label :inventory %>
      <%= s.number_field :inventory %><br>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>